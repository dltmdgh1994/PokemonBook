<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/type_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/normalBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:drawableLeft="@drawable/normal"
                android:gravity="center_horizontal|center_vertical"
                android:text="노말"
                android:textColor="#FFFFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/fightingBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:drawableLeft="@drawable/fighting"
                android:gravity="center_horizontal|center_vertical"
                android:text="격투"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/flyingBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#1E88E5"
                android:drawableLeft="@drawable/flying"
                android:gravity="center_horizontal|center_vertical"
                android:text="비행"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/poisonBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#8E24AA"
                android:drawableLeft="@drawable/poison"
                android:gravity="center_horizontal|center_vertical"
                android:text="독"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/groundBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#CC4418"
                android:drawableLeft="@drawable/ground"
                android:gravity="center_horizontal|center_vertical"
                android:text="땅"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/rockBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#E69D08"
                android:drawableLeft="@drawable/rock"
                android:gravity="center_horizontal|center_vertical"
                android:text="바위"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bugBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#7CB342"
                android:drawableLeft="@drawable/bug"
                android:gravity="center_horizontal|center_vertical"
                android:text="벌레"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/ghostBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#5E35B1"
                android:drawableLeft="@drawable/ghost"
                android:gravity="center_horizontal|center_vertical"
                android:text="고스트"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/ironBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#00897B"
                android:drawableLeft="@drawable/iron"
                android:gravity="center_horizontal|center_vertical"
                android:text="강철"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fireBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FB8C00"
                android:drawableLeft="@drawable/fire"
                android:gravity="center_horizontal|center_vertical"
                android:text="불꽃"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/waterBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#039BE5"
                android:drawableLeft="@drawable/water"
                android:gravity="center_horizontal|center_vertical"
                android:text="물"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/plantBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#43A047"
                android:drawableLeft="@drawable/plant"
                android:gravity="center_horizontal|center_vertical"
                android:text="풀"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/elecBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FDD835"
                android:drawableLeft="@drawable/electric"
                android:gravity="center_horizontal|center_vertical"
                android:text="전기"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/esperBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/holo_red_light"
                android:drawableLeft="@drawable/esper"
                android:gravity="center_horizontal|center_vertical"
                android:text="에스퍼"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/iceBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#00ACC1"
                android:drawableLeft="@drawable/ice"
                android:gravity="center_horizontal|center_vertical"
                android:text="얼음"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dragonBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#3949AB"
                android:drawableLeft="@drawable/dragon"
                android:gravity="center_horizontal|center_vertical"
                android:text="드래곤"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/darkBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#0F0F1A"
                android:drawableLeft="@drawable/dark"
                android:gravity="center_horizontal|center_vertical"
                android:text="악"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/fairyBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#E017CA"
                android:drawableLeft="@drawable/fairy"
                android:gravity="center_horizontal|center_vertical"
                android:text="페어리"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>